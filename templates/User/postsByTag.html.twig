{% extends 'base.html.twig' %}

{% block title %}Hello PostController!
{% endblock %}

{% block body %}
	<div class="example-wrapper">
		<div class="container-content">
			<div class="main">
				<h1>All Posts</h1>

				<div>
					{% if tag.posts|length > 0 %}
						{% for post in tag.posts %}
							<div class="post-container">
								<a class="post-title" href="{{path("app_user_showPost",{id:post.id})}}">
									<h1>{{post.title|capitalize}}</h1>
								</a>
								<p>{{post.summary}}</p>
								<p>{{post.author.fullName}}
									|
									{{post.publishedAt|date("d M Y -- H:i")}}</p>
							</div>
						{% endfor %}
					{% else %}
						<h2>No posts for this category</h2>
					{% endif %}
				</div>
			</div>
			<div class="side-bar">
				<h1>Categories</h1>
				{% if tags|length > 0 %}
					<div class="categories">
						{% for tag in tags %}
							<a href="{{path("app_user_postsByTag",{id:tag.id})}}">{{tag.name}}</a>
						{% endfor %}
					</div>
				{% else %}
					<h3>No categories available</h3>
				{% endif %}
			</div>
		</div>


	</div>
{% endblock %}
